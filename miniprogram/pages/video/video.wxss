/* pages/video/video.wxss */
.video_body {
    margin-top: 20rpx;
    border-radius: 15rpx;
    width: 700rpx;
    height: 440rpx;
}

.video_part {
    display: flex;
    flex-direction: column;
    justify-content: center;
    justify-items: center;
}

.center {
    display: flex;
    justify-content: center;
}

.video_clipname {
    font-weight: 600;
    font-size: 35rpx;
    color: gray;
}

.video_clipname text {
    margin-left: 10rpx;
}

.a1 {
    display: flex;
    align-items: center;
}

.icon_and_text {
    display: flex;
    align-items: center;
}

.icon_and_text image {
    width: 30rpx;
    height: 30rpx;
}

.icon_and_text text {
    font-weight: 400;
    font-size: 35rpx;
}

.b1 {
    height: 70rpx;
    margin-left: 60rpx;
    display: flex;
    align-items: center;
    flex-direction: row;
    width: 85%;

}

.c1 {
    margin-left: 10rpx;
    width: 50rpx;

}

.d1 {
    width: 400rpx;
    display: -webkit-box;
    word-break: break-all;
    text-overflow: ellipsis;
    overflow: hidden;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 1;
}

.up_avater {
    width: 70rpx;
    height: 70rpx;
    border-radius: 50%;
}

.up_user {
    padding: 20rpx;
    padding-left: 0;
    border-top: 1rpx solid gainsboro;
    display: flex;
    flex-direction: row;
    align-items: center;
    margin-left: 57rpx;
    margin-top: 30rpx;
    width: 85%;
}

.up_name {
    margin-left: 20rpx;
    font-size: 35rpx;
    width: 200rpx;
    display: -webkit-box;
    word-break: break-all;
    text-overflow: ellipsis;
    overflow: hidden;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 1;
}

.center1 {
    display: flex;
    flex-direction: column;
    justify-content: center;
}

.video_time {
    margin-left: 100rpx;
    color: gainsboro;
}

.collect_img {
    margin-left: 30rpx;
    height: 40rpx;
    width: 40rpx;
}

.liulan {
    display: flex;
    align-items: center;
    margin-left: 50rpx;
}

.liulan image {
    height: 30rpx;
    width: 30rpx;
}

.liulan text {
    margin-left: 10rpx;
}

.video_option {
    display: flex;
    justify-content: center;
    align-items: center;
    align-self: center;
    justify-self: center;
    width: 400rpx;
    margin: 30rpx;
    height: 100rpx;
    background-color: white;
    border-radius: 20rpx;
    font-size: 30rpx;
    font-weight: 600;
}

.choice_body {

    margin-left: 50rpx;
    margin-right: 50rpx;
    border-radius: 20rpx;
    background-color: rgba(220, 220, 220, 0.185);
    padding-bottom: 30rpx;
}

.big_body {
    display: flex;
    flex-direction: column;
    margin-left: 50rpx;
    margin-right: 50rpx;
    margin-top: 50rpx;
    padding: 30rpx;
    background-color: rgba(220, 220, 220, 0.185);
    border-radius: 20rpx;
}

.video_done {
    display: flex;
    justify-content: center;
    align-items: center;
    align-self: center;
    justify-self: center;
    width: 500rpx;
    height: 100rpx;
    margin: 20rpx;
    border-radius: 20rpx;
    background-color: white;

}

.video_now {
    width: 300rpx;
    height: 300rpx;
    margin: 20rpx;
    border: 2rpx blue solid;
}

.ending {
    margin-top: 10rpx;
    font-size: 40rpx;
    font-weight: 600;
}