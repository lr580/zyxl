<van-grid icon-size="30px" clickable column-num="3">
  <van-grid-item wx:if="{{userinfo}}" style="border-radius: 30rpx;"
    icon="/img/xiaoxi.png"
    link-type="navigateTo"
    url="../mymessage/mymessage"
    text="消息"
  />
  <van-grid-item  wx:if="{{userinfo}}" 
    icon="/img/shoucang.png"
    link-type="navigateTo"
    url="../mycollect/mycollect"
    text="收藏"
  />
  <van-grid-item wx:if="{{userinfo}}" 
    icon="/img/liulan.png"
    link-type="navigateTo"
    url="../myhistory/myhistory"
    text="历史"
  />
  <!-- <van-grid-item wx:if="{{userinfo}}" 
    icon="/img/shudong.png"
    link-type="navigateTo"
    url="../mypost/mypost"
    text="树洞"
  /> -->
  <van-grid-item
    icon="/img/help.png"
    link-type="navigateTo"
    url="../help/help"
    text="帮助"
  />
  <van-grid-item 
    icon="/img/fankui.png"
    link-type="navigateTo"
    url=""
    text="反馈"
  />
</van-grid>

