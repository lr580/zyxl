/* pages/index/index.wxss */
.video_body{
  background-color: white;
  width: 330rpx;
  height: 300rpx;
  margin: 20rpx;
  border-radius: 15rpx;
 box-shadow:1rpx 1rpx 1rpx gainsboro;
}

.video_list{
  
  padding: 20prx;
  width: 100%;
  display: flex;
  flex-wrap: wrap;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}

.video_cover_img image{
  width: 330rpx;
  height: 200rpx;
  border-top-left-radius: 15rpx;
  border-top-right-radius: 15rpx;
}

.video_tittle{
  padding-left: 10rpx;
  padding-right: 10rpx;
  font-weight: 400;
  font-size: 35rpx;
  display: -webkit-box;
  word-break: break-all;
  text-overflow: ellipsis;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp:1;
}

.state{
  display: flex;
  align-items: center;

  margin-top: 10rpx;
}

.e{
  align-items: center;
  display: flex;
  margin-left: 10rpx;
}

.e image{
  border-radius: 0;
}

.f image{
  border-radius: 0;
}
.f{
  align-items: center;
  display: flex;
  margin-left: 30rpx;
}

.state image{
  width: 20rpx;
