/* miniprogram/pages/Theater/Theater.wxss */
@import "../../colorui/animation.wxss";

image[class*="gif-"] {
    border-radius: 6rpx;
    display: block;
}


.video_body {
    border-radius: 10rpx;
    margin-left: 30rpx;
    margin-right: 30rpx;
    margin-bottom: 30rpx;
    padding: 40rpx;
    padding-bottom: 20rpx;
    background-color: #f4f4f4;
    height: 500rpx;
    display: flex;
    flex-direction: column;
    /* justify-content: center; */
    /* align-items: center; */
    /* box-shadow: 2px 2px 2px gainsboro; */
    padding-left: 20rpx;
}

.video_cover {
    width: 96%;
    height: 100%;
    margin-left: 22rpx;
    border-radius: 5rpx;
}

.video_intro {
    flex-direction: column;
    height: 150rpx;
    width: 500rpx;
    padding: 5rpx;
    margin-top: 20rpx;
    margin-left: 20rpx;
}

.video_title {
    font-weight: 600;
    font-size: 33rpx;
    letter-spacing: 0.5rpx;
    display: -webkit-box;
    word-break: break-all;
    text-overflow: ellipsis;
    overflow: hidden;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
    padding-right: 10rpx;
    height: 50rpx;
    margin-top: 10rpx;
}

.video_type {
    align-items: center;
    display: flex;
    width: 130rpx;
    /* margin-left: 180rpx; */
}


.video_type text {
    margin-left: 8rpx;
    font-size: 22rpx;
    font-weight: 400;
    color: #bfbfbf;
}

.video_type image {
    width: 30rpx;
    height: 30rpx;
}


.video_count {
    font-weight: 400;
    color: #bfbfbf;
    align-items: center;
    display: flex;
    margin-left: 10rpx;
}

.video_count image {
    width: 30rpx;
    height: 30rpx;
}

.video_count text {
    margin-left: 8rpx;
    font-size: 22rpx;
    font-weight: 400;
    color: #bfbfbf;
}

.scroll_part {
    color: black;
    /*吃掉报错*/
}

.video_state {
    display: flex;
    flex-direction: row;
    padding: 5rpx;
    /* margin-top: 40rpx; */
}

.trans {

    transition: 0.15s;
}

.bottom_tip {
    margin-top: 30rpx;
    display: flex;
    align-items: center;
    justify-content: center;
}

.bottom_tip image {
    width: 30rpx;
    height: 30rpx;
}

.bottom_tip text {
    margin-left: 20rpx;
    font-size: 30rpx;
    font-weight: 600;
    color: gray;
}

.kk {
    width: 100%;
    height: 40rpx;
}